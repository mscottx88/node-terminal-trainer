{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Bash",
      "protocol": "inspector",
      "port": 9229,
      "localRoot": "${workspaceRoot}",
      "remoteRoot": "/mnt/c/Users/michael-scott/node-terminal-trainer"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test Spec",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "${file}",
        "--no-timeouts",
        "--reporter",
        "spec",
        "-x",
        "mock-training-package/hello-world/hello-world.js"
      ],
      "skipFiles": [
        // "${workspaceRoot}/node_modules/**/*",
        "<node_internals>/**/*"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "--nolazy"
      ]
    }
  ]
}
